# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=YOUR_AWS_ACCOUNT_ID_HERE

# AWS Bedrock Configuration
BEDROCK_MODEL_ID=anthropic.claude-3-sonnet-20240229-v1:0
BEDROCK_REGION=us-east-1
MAX_TOKENS=4096
TEMPERATURE=0.7

# Agent Configuration
AGENT_NAME=aws-resource-manager
AGENT_DESCRIPTION=AI-powered AWS resource management agent
MAX_ITERATIONS=10
VERBOSE=true

# MCP Configuration
MCP_SERVER_PORT=3000
MCP_LOG_LEVEL=INFO

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Resource Limits
MAX_S3_BUCKETS_PER_REQUEST=5
MAX_LAMBDA_FUNCTIONS_PER_REQUEST=5
MAX_DYNAMODB_TABLES_PER_REQUEST=5

# Security
ENABLE_AUDIT_LOGGING=true
REQUIRE_APPROVAL_FOR_DESTRUCTIVE_OPERATIONS=true

# Set to 'false' if you encounter SSL certificate verification errors
SSL_VERIFY=true